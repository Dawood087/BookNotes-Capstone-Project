<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Manga Entry</title>
    <!-- Bootstrap Link for Styling-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Navbar/Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary p-3 shadow-sm">
      <div class="container-fluid">
        <a class="navbar-brand me-4 d-flex align-items-center" href="/">
          <span class="fs-4 me-2">ðŸ“–</span>
          Create a New Entry
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Back To List Button -->
        <div class="ms-lg-auto">
          <a
            href="/"
            class="btn btn-light"
            style="text-decoration: none; color: black"
            >Back to List</a
          >
        </div>
      </div>
    </nav>

    <!-- Form for Inpputs -->
    <div class="container mt-5">
      <h2 class="mb-4">Manga Details</h2>
      <form action="/add" method="POST" class="add-form">
        <!-- Title Input + Example Placeholder Value-->
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value=""
            required
            placeholder="e.g. One Piece, Naruto"
          />
        </div>

        <!-- Author Input + Example Placeholder Value-->
        <div class="mb-3">
          <label for="author" class="form-label">Author:</label>
          <input
            type="text"
            class="form-control"
            id="author"
            name="author"
            value=""
            required
            placeholder="e.g. Eiichiro Oda"
          />
        </div>

        <!-- Rating Input + Max/Min Value -->
        <div class="mb-3">
          <label for="rating" class="form-label">Rating (1-10):</label>
          <input
            type="number"
            class="form-control"
            id="rating"
            name="rating"
            value=""
            min="1"
            max="10"
            required
          />
        </div>

        <!-- Notes / Summary Input -->
        <div class="mb-3">
          <label for="notes" class="form-label">Notes / Summary:</label>
          <textarea
            class="form-control"
            id="notes"
            name="notes"
            rows="5"
            placeholder="Your thoughts, favorite arcs, or a summary."
          ></textarea>
        </div>

        <!-- ISBN Input -->
        <div class="mb-4">
          <label for="isbn" class="form-label"
            >ISBN (13-digits, for Coverimage):</label
          >
          <input
            type="text"
            class="form-control"
            id="isbn"
            name="isbn"
            value=""
            maxlength="13"
            placeholder="Used to fetch the cover image."
          />
        </div>

        <button type="submit" class="btn btn-primary btn-lg saveBtn">
          Save Entry
        </button>
      </form>
    </div>
    <!-- Bootstrap JS Script Connection-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
